{#
/**
 * @file
 * ask-us-block template
 *
 * Variables:
 *   libchat_id : springshare ask us button id
 *   - mobile: libchat_cf7cee7b231b23dd15b04cc264f1e25f
 *   link_1_url : customizable link 1 url
 *   link_1_text : customizable link 1 text
 *   link_2_url
 *   link_2_text
 *   faq_form : misnamed key. Is used for search button text and label.
 */
#}
{{ attach_library('ask_us/ask-us') }}
<div class="info-grid">
  <div class="info-heading">
    {{ ask_title }}
  </div>
<div>
  <form method="get" class="navbar-form navbar-left" role="search" name="s-la-searchform" id="search-faq-mobile-form" action="https://umd.libanswers.com/search" aria-label="Mobile FAQ form">
    <input type="text" id="search-faq-mobile-field" class="form-control" name="q" required placeholder="{{ faq_placeholder }}" size="25" value="" autocomplete="on" aria-label="Mobile FAQ search input">
    <button type="submit" class="btn-faq">{{ faq_form }}</button>
  </form>
  <div>
    <div><a href="{{ link_1_url }}">{{ link_1_text }}</a> | <a href="{{ link_2_url }}">{{ link_2_text }}</a></div>
  </div>
  <div>
    <!-- start of chat chat with us! button -->
    <button
      class="cw-button"
      id="cw-button"
      href="#"
      onClick="openChatWindow()"
      type="button" 
      aria-label="Open chat with us chat widget"
    >
      <div class="cw-button-content" aria-hidden="true">
        <div class="cw-icon" id="cw-icon"></div>
        <div class="cw-text"><p>Chat With Us!</p></div>
      </div>
    </button>
    <!-- end of chat chat with us! button -->
    <div class="utility-border">
      <span aria-hidden="true" class="fas fa-book"></span>
      <span class="sr-only">Book icon</span><span><a href="https://lib.guides.umd.edu/">RESEARCH GUIDES</a></span>
    </div>
    <div class="utility-border">
      <span aria-hidden="true" class="fas fa-laptop-code"></span>
      <span class="sr-only">Book icon</span><span><a href="/about/contact/tech">REPORT A PROBLEM</a></span>
    </div>
    <div class="utility-border">
      <span aria-hidden="true" class="fas fa-comment"></span>
      <span class="sr-only">Book icon</span><span><a href="https://libumd.wufoo.com/forms/library-suggestions">SHARE FEEDBACK</a></span>
    </div>
  </div>
</div>
